{
    "name": "amphp/artax",
    "homepage": "https://github.com/amphp/artax",
    "description": "Asynchronous concurrent HTTP/1.1 client built on the Amp concurrency framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": [
        "http",
        "rest",
        "client",
        "parallel",
        "async",
        "non-blocking"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@gmail.com"
        },
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "amphp/amp": "dev-ext-async",
        "amphp/byte-stream": "dev-ext-async",
        "kelunik/certificate": "^1.1",
        "league/uri-parser": "^1.4",
        "league/uri-schemes": "^1.2",
        "psr/http-message": "^1.0.1",
        "amphp/http": "^1.0.1"
    },
    "require-dev": {
        "amphp/php-cs-fixer-config": "dev-ext-async",
        "phpunit/phpunit": "^7.5.1"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Artax\\": "lib"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Test\\Artax\\": "test"
        }
    },
    "config": {
        "platform": {
            "php": "7.3.0"
        }
    }
}
